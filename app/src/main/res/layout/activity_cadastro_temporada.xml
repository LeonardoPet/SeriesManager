<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroTemporadaActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastre os Dados da Temporada"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/numSquencialtempEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint = "num sequencial"
            android:padding="5dp"
            android:layout_margin="5dp"
            />

        <EditText
            android:id="@+id/anolancamentoTempEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint = "Ano de lançamento"
            android:padding="5dp"
            android:layout_margin="5dp"
            />

        <EditText
            android:id="@+id/qtdEpisodioEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint = "Quantidade de Episódios"
            android:padding="5dp"
            android:layout_margin="5dp"
            />



        <Button
            android:id="@+id/salvarTemporadaBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:padding="5dp"
            android:layout_margin="5dp"></Button>


    </LinearLayout>
</ScrollView>