<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cadastroEpisodio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroEpisodioActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastre os Dados do Episódio"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/nomeSerieEpEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint = "Nome da Série"
            android:padding="5dp"
            android:layout_margin="5dp"
            />


        <EditText
            android:id="@+id/numSquencialEpEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint = "num sequencial"
            android:padding="5dp"
            android:layout_margin="5dp"
            />

        <EditText
            android:id="@+id/NomeEpEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint = "Nome"
            android:padding="5dp"
            android:layout_margin="5dp"
            />

        <EditText
            android:id="@+id/duracaoEpEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint = "Tempo de duração(Minutos)"
            android:padding="5dp"
            android:layout_margin="5dp"
            />




        <Button
            android:id="@+id/salvarEpisodioBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:padding="5dp"
            android:layout_margin="5dp"></Button>


    </LinearLayout>
</ScrollView>