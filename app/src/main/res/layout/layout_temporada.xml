<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/numSquencialTempEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Num Sequencial"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/anolancamentoTempEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ano"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/qtdEpisodioEt"
        app:layout_constraintTop_toBottomOf="@id/numSquencialTempEt" />
    <TextView
        android:id="@+id/qtdEpisodioEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quantidade de EpisÃ³dios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/anolancamentoTempEt"
        app:layout_constraintTop_toBottomOf="@id/numSquencialTempEt" />


</androidx.constraintlayout.widget.ConstraintLayout>