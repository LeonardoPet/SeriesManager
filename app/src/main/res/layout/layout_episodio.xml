<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/numSquencialEpEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Num Sequencial"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NomeEpEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome do Epsódio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/duracaoEpEt"
        app:layout_constraintTop_toBottomOf="@id/numSquencialEpEt" />
    <TextView
        android:id="@+id/duracaoEpEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tempo de duração"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/NomeEpEt"
        app:layout_constraintTop_toBottomOf="@id/numSquencialEpEt" />

</androidx.constraintlayout.widget.ConstraintLayout>